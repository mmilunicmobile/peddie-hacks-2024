---
interface Props {
	title: string;
}

// Gets the title for the layout.
const { title } = Astro.props;

import "../styles/base.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="A website for Retro Rhythm, and educational rhythm game"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-background h-full">
		<slot />
	</body>
</html>
<style>
	html {
		height: 100%;
	}
</style>
