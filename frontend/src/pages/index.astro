---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Card from "../components/Card.jsx";
---

<style is:global>
	body {
		overflow: hidden;
	}
</style>

<Layout title="Welcome to Retro Rhythm.">
	<Navbar />
	<main class="bg-white scroll-smooth">
		<section
			class="hero bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 text-white text-center flex flex-col justify-center items-center h-screen"
		>
			<h1 class="text-6xl font-bold mb-4 font-press-start">
				Welcome to <span class="font-press-start text-white"
					>Retro Rhythm</span
				>
			</h1>
			<p class="text-xl mb-8"></p>
			<a
				href="/levelselect"
				class="text-purple-700 font-semibold font-press-start"
				><Card
					borderStyle="border-purple-700 bg-white hover:bg-purple-700 hover:text-white"
					><div class="py-2 px-4">Get Started</div></Card
				></a
			>
		</section>
	</main>
</Layout>
